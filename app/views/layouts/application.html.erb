<!DOCTYPE html>
<html>
    <head>
        <title>Flashcards</title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>

        <div class="container">

            <nav class="navbar navbar-default">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <%= link_to("Флэшкарточкер",root_path, class: "navbar-brand")  %>
                </div>

                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                    <ul class="nav navbar-nav navbar-right">
                        <li><%= link_to("Все карточки",cards_path) %></li>
                        <li><%= link_to("Добавить карточку",new_card_path) %></li>
                        <% if current_user %>
                        <li>  <%= link_to "Отредактировать профиль", edit_user_path(current_user.id) %></li>
                          <li><%= link_to "Выйти", :logout, method: :post %></li>
                        <% else %>
                          <li><%= link_to "Зарегистрироваться", new_user_path %> </li>
                          <li><%= link_to "Войти", :login %></li>
                        <% end %>
                    </ul>
                </div>
            </nav>

            <% if !flash[:alert].blank? %>
              <p class="alert alert-warning"><%= flash[:alert] %></p>
            <% end %>

            <% if !flash[:error].blank? %>
              <p class="alert alert-danger"><%= flash[:error] %></p>
            <% end %>

            <% if !flash[:notice].blank? %>
              <p class="bg-success"><%= flash[:notice] %></p>
            <% end %>

            <%= yield %>
        </div>

    </body>

</html>
