<section id="login">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="form-wrap">
                        <h1 class="text-center">Войти в аккаунт</h1>
                        <%= simple_form_for(:user_sessions, url: {action: 'create'}, :method => :post) do |f| %>
                        <div class="form-group">
                          <%= f.label :email, 'Email', class: 'sr-only'%>
                          <%= f.input :email, placeholder: "somebody@example.com",label: false %>
                        </div>
                        <div class="form-group">
                          <%= f.label :password, 'Password', class: 'sr-only'%>
                          <%= f.input :password, placeholder: "пароль", label: false%>
                        </div>
                        <%= f.button :submit, 'Войти',id: 'btn-login', class: 'btn-custom btn-lg btn-block' %>
                        <%= link_to "Login with Facebook", auth_at_provider_path(provider: :facebook) %>
                        <% end %>
                    </div>
                </div>
            </div>
    </div>

</section>
